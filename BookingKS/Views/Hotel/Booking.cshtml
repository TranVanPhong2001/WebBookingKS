
    @model BookingKS.Models.Phong


@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_LayoutKhachSan.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(/Content/Theme_KS/img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Đặt Phòng</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Hotel")">Trang Chủ</a></li>
                   
                    <li class="breadcrumb-item text-white active" aria-current="page">Đặt Phòng</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Booking Start -->
<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input"
                                       placeholder="Ngày đến" data-target="#date1" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" placeholder="Ngày đi" data-target="#date2" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Số người</option>
                                <option value="1">1 người</option>
                                <option value="2">2 người</option>
                                <option value="3">3 người</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Loại phòng</option>
                                <option value="1">Gia đình</option>
                                <option value="2">Cặp đôi</option>
                                <option value="3">Sang trọng</option>
                                <option value="4">Giá rẻ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
<!-- Booking Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Đặt Phòng</h6>
            <h1 class="mb-5">Thông Tin Đặt Phòng <span class="text-primary text-uppercase">Hotel QP</span></h1>

        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="/Content/Theme_KS/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="/Content/Theme_KS/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="/Content/Theme_KS/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="/Content/Theme_KS/img/about-4.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                                      
                    @using (Html.BeginForm("Booking", "Hotel", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="tenKH" id="name" placeholder="Your Name">
                                <label for="name">Họ tên</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="CCCD" id="cccd" placeholder="Your Cccd">
                                <label for="cccd">CCCD</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="gioiTinh" id="gioitinh" placeholder="Your Email">
                                <label for="gioitinh">Giới tính</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating date" id="date3" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="ngayDen" id="checkin" placeholder="Check In" data-target="#date3" data-toggle="datetimepicker" />
                                <label for="checkin">Ngày đến</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating date" id="date4" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="ngayDi" id="checkout" placeholder="Check Out" data-target="#date4" data-toggle="datetimepicker" />
                                <label for="checkout">Ngày đi</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="sdt" id="sdt" placeholder="Your Email">
                                <label for="sdt">Số điện thoại</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" name="soNguoi" id="songuoi" placeholder="Your Email">
                                <label for="songuoi">Số người ở</label>
                            </div>
                        </div>



                        <div class="col-12">
                            <div class="form-floating">
                                <div class="control-group form-group" style="display:none">
                                    <label class="contact-p1">Mã Phòng:</label>
                                    <input type="text" class="form-control" name="maPhong" id="name" value="@ViewBag.MaPhongID">
                                    <p class="help-block"></p>
                                </div>

                                <div class="control-group form-group">
                                    <label class="contact-p1">Phòng đã chọn:</label>
                                    <input type="text" class="form-control" id="name" value="@ViewBag.MaPhong2">
                                    <p class="help-block"></p>
                                </div>


                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Special Request" name="diaChi" id="message" style="height: 100px"></textarea>
                                <label for="message">Địa chỉ</label>
                            </div>
                        </div>



                        <div class="col-12">
                            <button class="btn btn-primary w-100" id="btn" onclick="myFunction()">Xác nhận</button>
                            <script>
                                function myFunction() {
                                    alert("Bạn đã đặt phòng thành công. Vui lòng thanh toán để hoàn tất");
                                }
                            </script>
                        </div>

                        @*<div class="col-12">
                            <a href="/ShoppingCart/PaymentWithPaypal" class="btn btn-success">Thanh Toán</a>
                           
                        </div>*@
                    </div>
                    }

                </div>
            </div>
        </div>


    </div>
</div>



