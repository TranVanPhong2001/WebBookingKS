@model IEnumerable<BookingKS.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout-Admin.cshtml";
}

<h2>DANH SÁCH HÓA ĐƠN</h2>
<p>
    @Html.ActionLink("Thêm", "Create")
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh Sách
    </div>

    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Mã phiếu thuê phòng</th>
                    <th>Ngày thanh toán</th>
                    <th>Tổng tiền</th>
                    <th>Nhân viên</th>





                    <th>Chức Năng</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.maHD</td>
                        <td>@item.maPTP</td>


                        <td>@item.ngayThanhToan</td>
                        <td>@item.tongTien</td>
                        <td>@item.NhanVien.tenNV</td>



                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.maHD }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.maHD }) |
                            @Html.ActionLink("Xoá", "Delete", new { id = item.maHD })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
