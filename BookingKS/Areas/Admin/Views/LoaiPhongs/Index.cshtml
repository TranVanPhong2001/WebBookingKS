@model IEnumerable<BookingKS.Models.LoaiPhong>

@{
    ViewBag.Title = "Index";
}




<h2>DANH SÁCH LOẠI PHÒNG</h2>
<p>
    @Html.ActionLink("Thêm mới loại phòng", "Create")
</p>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Danh Sách
    </div>

    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã Loại</th>
                    <th>Tên Loại Phòng</th>

                    <th>Đơn Giá</th>


                    <th>Chức Năng</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ma_LP</td>
                        <td>@item.tenLP</td>
                        <td>@item.DG</td>



                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ma_LP }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ma_LP }) |
                            @Html.ActionLink("Xoá", "Delete", new { id = item.ma_LP })

                            
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<!-- Add this script to your view or layout -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Check for the existence of the error message in TempData
        var errorMessage = '@TempData["ErrorMessage"]';

        if (errorMessage && errorMessage.length > 0) {
            // Display an alert with the error message
            alert(errorMessage);
        }
    });
</script>


