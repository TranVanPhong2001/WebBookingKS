        @Html.LabelFor(model => model.ImageNV, "Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.ImageNV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ImageNV, "", new { @class = "text-danger" })
            <input type="file" name="Avatar" id="Avatar" />
        </div>
    </div>

    <div class="form-group1">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
